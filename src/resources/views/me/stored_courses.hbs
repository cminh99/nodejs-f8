<div class="mt-5">
  <div class="d-flex">
    <h3 class="mb-4">Quản lý khoá học</h3>
    <div class="ml-auto">
      <a href="/courses/create">Tạo mới</a>
      <span class="mx-2">|</span>
      <a href="/me/trash/courses">Thùng rác</a>
    </div>
  </div>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Tên khoá học</th>
        <th scope="col">Trình độ</th>
        <th scope="col">Thời gian tạo</th>
        <th scope="col">Hành động</th>
      </tr>
    </thead>
    <tbody>
      {{#if courses}}
        {{#each courses}}
          <tr>
            <th>{{sum @index 1}}</th>
            <td>{{this.name}}</td>
            <td>{{this.level}}</td>
            <td>{{this.createdAt}}</td>
            <td>
              <a
                href="/courses/edit/{{this._id}}"
                class="btn btn-sm btn-link">
                Sửa
              </a>
              <a
                href=""
                class="btn btn-sm btn-link"
                data-id="{{this._id}}"
                data-toggle="modal"
                data-target="#confirm-delete-modal">
                Xoá
              </a>
            </td>
          </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="5" class="text-center">
            Bạn chưa đăng khóa học nào. <a href="/courses/create">Đăng khóa học mới</a> ngay!
          </td>
        </tr>
      {{/if}}
    </tbody>
  </table>
</div>

<!-- Modal -->
<div class="modal fade" id="confirm-delete-modal" tabindex="-1" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xác nhận xoá!</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn muốn xoá khoá học này?</p>
        <p>Khóa học này sẽ được đưa vào thùng rác. Bạn có thể khôi phục khi bạn muốn!</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger" id="delete-course-btn">Xóa</button>
        <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

<form id="delete-course-form" method="POST"></form>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var modalConfirm = $('#confirm-delete-modal');
    var deleteButton = $('#delete-course-btn');
    var deleteForm = $('#delete-course-form');
    var courseId;

    // Get the course's ID in the modal
    modalConfirm.on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      courseId = button.data('id');
    });

    // Set action=[URL] and submit the form to delete the course
    deleteButton.on('click', function() {
      deleteForm.attr('action', `/courses/delete/${courseId}?_method=DELETE`);
      deleteForm.submit();
    });
  });
</script>