<form class="mt-4" id="container-form" action="/courses/handle-trash-form-actions" method="POST">
  <div class="d-flex align-items-center">
    <h3>Khóa học đã xóa</h3>
    <div class="ml-auto">
      <span class="text-muted">{{trashCount}} khóa học đã xóa</span>
      <span class="mx-2">|</span>
      <a class="ml-auto" href="/me/stored/courses">Danh sách khóa học</a>
    </div>
  </div>

  <div class="mt-4 row">
    <div class="col-md-3 d-flex align-items-center">
      <div class="input-group input-group-sm">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <input type="checkbox" id="checkbox-select-all-items">
          </div>
        </div>
        <select class="custom-select" name="action" required>
          <option value="" disabled selected>-- Chọn hành động --</option>
          <option value="restore">Khôi phục</option>
          <option value="forceDelete">Xóa vĩnh viễn</option>
        </select>
        <div class="input-group-append">
          <button class="btn btn-secondary disabled" id="btn-exec-options" type="submit">
            OK
          </button>
        </div>
      </div>
    </div>
  </div>

  <table class="table table-hover mt-2">
    <thead>
      <tr class="text-center bg-light">
        <th></th>
        <th scope="col">#</th>
        <th scope="col">Tên khoá học</th>
        <th scope="col">Trình độ</th>
        <th scope="col">Thời gian xóa</th>
        <th scope="col">Hành động</th>
      </tr>
    </thead>
    <tbody>
      {{#if courses}}
        {{#each courses}}
          <tr>
            <td>
              <input
                type="checkbox"
                name="courseIDs[]"
                value="{{this._id}}"
              >
            </td>
            <td>{{sum @index 1}}</td>
            <td>{{this.name}}</td>
            <td>{{this.level}}</td>
            <td>{{this.deletedAt}}</td>
            <td class="text-center">
              <a href="" class="btn-restore" data-id="{{this._id}}">
                Khôi phục
              </a>
              <span class="mx-2"></span>
              <a href="" data-id="{{this._id}}" data-toggle="modal" data-target="#modal-confirm-delete">
                Xoá vĩnh viễn
              </a>
            </td>
          </tr>
        {{/each}}
      {{else}}
        <tr>
          <td colspan="6" class="text-center">
            Thùng rác trống. <a href="/me/stored/courses">Danh sách khóa học</a>
          </td>
        </tr>
      {{/if}}
    </tbody>
  </table>
</form>

<!-- Modal -->
<div class="modal fade" id="modal-confirm-delete" tabindex="-1" >
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xác nhận xoá!</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" style="font-size: 14px;">
        <p>Bạn muốn xoá vĩnh viễn khoá học này?</p>
        <p>Bạn sẽ không thể khôi phục khóa học này được nữa!</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-danger px-4" id="btn-delete-course">Xóa</button>
        <button type="button" class="btn btn-sm btn-secondary px-4" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

<form id="form-delete-course" method="POST"></form>
<form id="form-restore-course" method="POST"></form>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var courseId;
    var checkboxAll = $('#checkbox-select-all-items');
    var courseItemCheckbox = $('input[name="courseIDs[]"]');

    // Get the course's ID in the modal
    $('#modal-confirm-delete').on('show.bs.modal', function (event) {
      var button = $(event.relatedTarget);
      courseId = button.data('id');
    });

    // Set action=[URL] and submit the form to delete the course
    $('#btn-delete-course').on('click', function(e) {
      e.preventDefault();
      $('#form-delete-course').attr('action', `/courses/delete/force/${courseId}?_method=DELETE`);
      $('#form-delete-course').submit();
    });

    // Restore deleted courses
    $('.btn-restore').on('click', function(e) {
      e.preventDefault();
      courseId = $(this).data('id');
      $('#form-restore-course').attr('action', `/courses/restore/${courseId}?_method=PATCH`);
      $('#form-restore-course').submit();
    });

    // Checkbox all is checked
    checkboxAll.change(function() {
      var isCheckedAll = $(this).prop('checked');
      courseItemCheckbox.prop('checked', isCheckedAll);
      renderCheckAllSubmitBtn();
    });

    // Course item checkbox is checked
    courseItemCheckbox.change(function() {
      var isCheckedAll = courseItemCheckbox.length === $('input[name="courseIDs[]"]:checked').length;
      checkboxAll.prop('checked', isCheckedAll);
      renderCheckAllSubmitBtn();
    });

    $('#btn-exec-options').on('submit', function(e) {
      var isSubmitable = !$(this).hasClass('disabled');
      if (!isSubmitable) {
        e.preventDefault();
      }
    });

    // Re-render the executable button for check all
    function renderCheckAllSubmitBtn() {
      var checkedCount = $('input[name="courseIDs[]"]:checked').length;
      var btnExecOptions = $('#btn-exec-options');

      (checkedCount > 0) ?
        btnExecOptions.removeClass('disabled') :
        btnExecOptions.addClass('disabled');
    };
  });
</script>